def inverter(frase):
    invertida = [''.join(reversed(palavra)) for palavra in frase.split()]
    nova_frase = ' '.join(invertida)
    return nova_frase

original = input("Digite uma frase: ")
frase_invertida = inverter(original)
print("Frase invertida:", frase_invertida)

